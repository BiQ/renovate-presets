{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":separateMajorReleases",
    ":enableVulnerabilityAlertsWithLabel(security)"
  ],
  "timezone": "Europe/Copenhagen",
  "labels": [
    "dependencies"
  ],
  "prConcurrentLimit": 2,
  "minimumReleaseAge": "1 day",
  "packageRules": [
    {
      "matchPackagePatterns": ["^BiQ/gitops-workflows"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    },
    {
      // Auto-merge ruby base image updates where only the sha256 digest changes.
      // This lets us strictly pin the Docker image version, but also keep up with
      // incoming security updates without manual intervention. We get a trail of
      // explicit PRs and git changes for each digest update, so any necessary revert
      // will be easy.
      "groupName": "Docker: base image sha256 Docker digest update",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["digest"],
      "automerge": true,
      "automergeSchedule": ["at any time"]
    }
  ]
}
